<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script> 
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title</title>
</head>
<body >
    

    <div class="main">


        <div class="container ">
            <div class="row">
                <div class="col-lg-10 "></div>
                <div class="col-lg-2 marg ">
                    <div class="text-right glyphicon glyphicon-log-in">
                        @Html.ActionLink("Login", "Index", "Home", new { @class = "btn btn-primary " })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-8">
                    <h2>Система контроля за обучением студентов!</h2>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 text-center">
                    <div class="top-cover center-block">
                        <div class="btn-group text-center">
                            @Html.ActionLink("Главная", "Index", "Home", new { @class = "btn btn-success " })
                            @Html.ActionLink("Статистика", "About", "Home", null, new { @class = "btn btn-success " })
                            @Html.ActionLink("Студенты", "Index", "Students", null, new { @class = "btn btn-success " })
                            @Html.ActionLink("Курсы", "Index", "Course", new { @class = "btn btn-success " })
                            @Html.ActionLink("Инструктора", "Index", "Instructor", new { @class = "btn btn-success " })
                            @Html.ActionLink("Департамент", "Index", "Department", new { @class = "btn btn-success " })
                            @Html.ActionLink("Контакты", "About", "Home", new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 text-center" id="color_container">
                    <div class="well">
                        @RenderBody()
                    </div>
                    
                </div>
                <div class="col-md-1"></div>
                </div>

           
        </div>


    </div>



   
</body>
</html>
